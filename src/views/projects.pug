include includes/head.pug

include includes/header.pug

include includes/preloader.pug

main.projects-main
	section.content-section
		h1.section-header My works
		hr.divider
		p There are some of my works. They are not great, but not terrible (I hope so). Please, take a look at them.
	section.projects-list
		each item in projects
			div.projects-list-item
				img.projects-list-item-img(src= item.thumbnailURL)
				div.project-info
					h3.project-title= item.title
					ul.project-tags-list 
						each tag in item.tags
							li= tag
					p.project-description= item.description
					span.link.text-link
						a(href= item.url) Take a look 
						.link-underline
		- var values = [1, 2, 3];
			each val in values
				div.projects-list-item
					img.projects-list-item-img(src="img/project-template-2.webp")
					div.project-info
						h3.project-title Title
						ul.project-tags-list 
							li Node.js
							li Vue.js
						p.project-description Some site description
						span.link.text-link
							a(href="/projects") Take a look
							.link-underline

include includes/footer.pug

include includes/sidebar.pug

script(src="./../js/projects-page.js")